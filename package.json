{
  "name": "qr-generator",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf .next coverage node_modules tsconfig.tsbuildinfo",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "release": "standard-version",
    "test": "jest",
    "prettier:ci": "prettier --check ./**/*.{ts,tsx}",
    "typescript:ci": "tsc --noEmit",
    "test:ci": "jest --ci --collect-coverage --verbose"
  },
  "dependencies": {
    "@fontsource/catamaran": "^4.5.6",
    "@tailwindcss/forms": "^0.4.0",
    "clsx": "^1.1.1",
    "html-to-image": "^1.11.1",
    "next": "^13.1.0",
    "next-seo": "^5.14.0",
    "next-themes": "^0.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "react-qrcode-logo": "^2.8.0",
    "tailwind-merge": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.13.0",
    "eslint-config-next": "^13.1.0",
    "eslint-config-yehezgun": "^1.2.2",
    "husky": "^7.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.1.6",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write src/"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write src/"
    ]
  }
}
